	name = anguschadney
[core]
	editor = vim
	excludesfile = ~/.gitignore
[hub]
	host = github.com/anguschadney
[push]
	default = simple

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[mergetool]
    keepBackup = false
